@using ASPNetWebApp.Models
@{
    ViewBag.Title = "Blog";
    ApplicationDbContext database = new ApplicationDbContext();
    var posts = database.Posts.ToList().OrderBy(x => x.DateCreated);
}

<div class="container">
    <div class="row">
        <!-- Blog Entries Column -->
        <div class="col-md-8">
            <h1 class="page-header">
                Dionysis Chasakis' Blog
                <br/><small style="margin-left: 10px;">an ASP.Net MVC Project</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">Blog</li>
            </ol>
            <!-- First Blog Post -->
            @foreach (var post in posts)
            {
                <div class="col-lg-1">

                </div>
                <div class="col-lg-6">
                    <h3 style="margin-top: 0px; margin-bottom: 3px;"><small>@Html.DisplayFor(postItem => post.DateCreated)</small>
                    </h3>
                    <h2 style="margin-top: 0px; margin-bottom: 1px;">@Html.DisplayFor(postItem => post.Title)</h2>
                    <h4 style="margin-left: 10px; margin-top: 0px;"><small>-by Chasakis D.</small></h4>

                    @if (post.ImageUrl != null)
                    {
                        <hr>
                        <img class="img-responsive" src="@Html.DisplayFor(postItem => post.ImageUrl)" alt="">
                    }
                    @Html.DisplayFor(postItem => post.Body)
                    <!--<a class="btn btn-primary" href="#">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>-->
                    <hr>
                </div>
                <div class="col-lg-5">

                </div>
            }
        </div>
    </div>
</div>

